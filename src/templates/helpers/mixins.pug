mixin icon(name,mod)
	if(mod)
		svg(class="svg-icon svg-icon-" + name + ' ' + mod)
			use(xlink:href="img/sprite/symbol/sprite.svg#" + name)
	else
		svg(class="svg-icon svg-icon-" + name)
			use(xlink:href="img/sprite/symbol/sprite.svg#" + name)

mixin icon-dif(name,mod)
	if(mod)
		svg(class="svg-icon svg-icon-" + name + ' ' + mod)
			use(xlink:href="img/sprite-dif.svg#" + name)
	else
		svg(class="svg-icon svg-icon-" + name)
			use(xlink:href="img/sprite-dif.svg#" + name)


mixin breadcrumbs(list, currentpage, mod)
	- const lastindex = list.length + 1;

	+b.UL.breadcrumbs(itemscope='' itemtype='http://schema.org/BreadcrumbList' class=mod)
		+e.LI.item.--main(itemprop='itemListElement' itemscope='' itemtype='http://schema.org/ListItem')
			+e.A.link(href='/' itemprop='item')
				span(itemprop='name' content='Главная') Главная
			i.breadcrumbs__sep /
			meta(itemprop='position' content='0')

		each item, index in list.length ? list : ''
			+e.LI.item(itemprop='itemListElement' itemscope='' itemtype='http://schema.org/ListItem')
				+e.A.link(href='/' itemprop='item')
					span(itemprop='name' content='Главная')= item
				i.breadcrumbs__sep /
				meta(itemprop='position' content=index + 1)

		+e.LI.item(itemprop='itemListElement' itemscope='' itemtype='http://schema.org/ListItem')
			span(itemprop='name' content='Главная')= currentpage
			meta(itemprop='position' content=lastindex)



mixin pagination
	+b.pagination&attributes(attributes)
		+e.UL.list
			li.previous.disabled
				span
					+icon('slider-prev')
			
			li.current
				span 9 / 16
		
			li.next
				a(href="#")
					+icon('slider-next')

			